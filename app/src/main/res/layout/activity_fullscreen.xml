<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="#0099cc"
    tools:context=".FullscreenActivity">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->
    <WebView android:id="@+id/fullscreen_content" android:layout_width="match_parent"
        android:layout_height="469dp" android:keepScreenOn="true" android:textColor="#33b5e5"
        android:textStyle="bold" android:textSize="50sp" android:gravity="bottom|center_horizontal"
        android:text="@string/dummy_content" />

    <!-- This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows. -->

    <Spinner android:id="@+id/dummy_button" style="?metaButtonBarButtonStyle"
        android:layout_width="fill_parent" android:layout_height="wrap_content"
        android:text="@string/dummy_button"
        android:layout_gravity="end|bottom" />

</FrameLayout>
